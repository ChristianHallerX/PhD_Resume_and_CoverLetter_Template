\RequirePackage{parskip}

\newcounter{colorCounter}
\def\@sectioncolor#1#2#3{%
  {%
    \color{%
      \ifcase\value{colorCounter}%
        friggeriblue\or%
        friggerired\or%
        friggeriorange\or%
        friggerigreen\or%
        friggeripurple\or%
        friggeribrown\or%
        friggeriyellowgreen\or%
        friggeribrickred\or%
        friggerisepia\else%
        headercolor\fi%
    } #1#2#3%
  }%
  \stepcounter{colorCounter}%
}

\renewcommand{\section}[1]{
